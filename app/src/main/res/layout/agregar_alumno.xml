<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir alumno"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del alumno"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/ic_cara"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtNombreAl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/txtMatricula"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Matricula"
            android:imeOptions="actionNext"
            android:drawableRight="@drawable/ic_matricula"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_numero"
            android:hint="Numero de lista"
            android:imeOptions="actionNext"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="Añadir"
        android:textColor="@color/white"
        android:background="@drawable/shape_button2"
        android:id="@+id/btnAñadir" />

</LinearLayout>