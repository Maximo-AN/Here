<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:elevation="60dp"
    android:orientation="vertical"
    android:background="@color/black"
    android:backgroundTint="@color/white">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar asistencia"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#900C3F"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/rbgBotones2"
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rdbAsistenciaN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:buttonTint="#900C3F"
            android:text="Asistencia" />
        <RadioButton
            android:id="@+id/rdbFaltaN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:buttonTint="#900C3F"
            android:text="Falta" />
        <RadioButton
            android:id="@+id/rdbPendienteN"
            android:layout_width="match_parent"
            android:buttonTint="#900C3F"
            android:layout_height="match_parent"
            android:text="Pendiente" />
    </RadioGroup>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:background="@drawable/shape_button3"
        android:id="@+id/btnGuardarCambios" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>